<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#FFFFFF"
        android:background="@drawable/toolbar_gradient"
        app:titleMarginStart="30dp"
        android:outlineSpotShadowColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_profile"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_person"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="1dp"
                android:layout_weight="3.2"
                android:gravity="center|left"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/drawer"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_baseline"/>



        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_below="@+id/toolbarly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/v_one_login"
            android:layout_width="match_parent"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            android:layout_height="255dp" />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/rl_two_login"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="88dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_person2" />


                <ImageView
                    android:id="@+id/edit_profileimg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_add" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_uname"
                android:layout_below="@+id/tv_one_login"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#710583"
                android:text="USER NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_one_login"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="example@mail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="-"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/border_circuler"
                    android:textColor="#000"
                    android:gravity="center" />



                <TextView
                    android:id="@+id/followings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="-"
                    android:paddingVertical="5dp"
                    android:background="@drawable/border_circuler"
                    android:textColor="#000"
                    android:gravity="center" />



            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:text="Followers"
                android:textColor="#000"
                android:gravity="center"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:text="Following"
                android:textColor="#000"
                android:gravity="center"
                android:paddingLeft="15dp"/>

        </LinearLayout>



            <Button
                android:id="@+id/edit_profile"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_custome"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                app:backgroundTint="#FD4080">

            </Button>

        </LinearLayout>


    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mGridView"
        android:scrollbars="none"
        android:layout_below="@id/rl_profile"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_profile"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_profile"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/profile_anim"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>