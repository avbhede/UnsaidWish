<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_margin="10dp"
        card_view:cardElevation="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:resize_mode="fill"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    app:controller_layout_id="@layout/exo_playback_control_view"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/like_back"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:weightSum="6">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/post_profile"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_person2"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5.2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">


                            <TextView
                                android:id="@+id/post_uname"
                                android:layout_width="0dp"
                                android:layout_weight="4.0"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:padding="2dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#fff"
                                android:gravity="left|center"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/follow"
                                android:layout_width="0dp"
                                android:layout_weight="2.0"
                                android:layout_height="wrap_content"
                                android:text="Follow"
                                android:padding="2dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#fff"
                                android:gravity="right|center"
                                android:textSize="14dp"/>


                        </LinearLayout>



                        <TextView
                            android:id="@+id/post_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20/02/2020"
                            android:padding="2dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#fff"
                            android:gravity="left|center"
                            android:textSize="8dp"/>




                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/like_back"
                    android:layout_marginTop="70dp"
                    android:paddingHorizontal="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/ic_thumb_up"/>

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>


                    <ImageView
                        android:id="@+id/deslike"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_broken_heart" />

                    <TextView
                        android:id="@+id/deslike_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>




                </LinearLayout>

                <ImageView
                    android:id="@+id/report"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:background="@drawable/like_back"
                    app:srcCompat="@drawable/ic_report_off" />


            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/vdo_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

</LinearLayout>