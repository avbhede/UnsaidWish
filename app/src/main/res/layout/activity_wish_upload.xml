<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wish_background_btn"
    android:orientation="vertical"
    tools:context=".WishUpload">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wish_background_btn"
        android:minHeight="?attr/actionBarSize"
        android:outlineSpotShadowColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="30dp"
        app:titleTextColor="#FFFFFF">


        <ImageView
            android:id="@+id/back_wish"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/ic_arrow_left" />


        <TextView
            android:id="@+id/wishheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="monospace"
            android:text="Wish Name"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/preview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_gallery_wish"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="2.5"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/wish_background_btn"
                    android:fontFamily="sans-serif-light"
                    android:text="Select from Gallery "
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/teal_200"
                    />


                <Button
                    android:id="@+id/btn_shoot_wish"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="2.5"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wish_background_btn"
                    android:fontFamily="sans-serif-light"
                    android:text="Shoot A Video "
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#000" />


            </LinearLayout>

    <EditText
        android:id="@+id/et_wishname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Reciepent Name"
        android:drawableRight="@drawable/ic_person2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:background="@drawable/et_custom"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/et_wishmobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mobile"
        android:drawableRight="@drawable/ic_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:padding="15dp"
        android:fontFamily="sans-serif-light"
        android:inputType="number"
        android:layout_centerInParent="true"
        android:background="@drawable/et_custom"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_wishEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email id"
        android:drawableRight="@drawable/ic_mail_outline"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:fontFamily="sans-serif-light"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:background="@drawable/et_custom"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_wishDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Delivery Date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:focusable="false"
        android:drawableRight="@drawable/ic_date"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:background="@drawable/et_custom"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_wishTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Delivery Time"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:focusable="false"
        android:drawableRight="@drawable/ic_access_time"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:background="@drawable/et_custom"
        android:textSize="15sp" />


            <LinearLayout
                android:id="@+id/social_ly"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                android:id="@+id/et_skype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Skype Id"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:focusable="false"
                android:drawableRight="@drawable/ic_skype"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:background="@drawable/et_custom"
                android:textSize="15sp" />


                <EditText
                    android:id="@+id/et_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Facebook Id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:focusable="false"
                    android:drawableRight="@drawable/ic_facebook"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_custom"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/et_insta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Instagram Id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:focusable="false"
                    android:drawableRight="@drawable/ic_instagram"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_custom"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/et_linked"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Linkedin Id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:focusable="false"
                    android:drawableRight="@drawable/ic_linkedin"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_custom"
                    android:textSize="15sp" />

            </LinearLayout>

    <Button
        android:id="@+id/btn_uploadWish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wish_background_btn"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:textColor="#000"
        android:text="Upload "
        android:textStyle="bold"
        android:textAllCaps="false"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>