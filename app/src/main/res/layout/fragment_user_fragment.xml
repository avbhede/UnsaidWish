<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".User_fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#FFFFFF"
        android:background="@drawable/toolbar_gradient"
        app:titleMarginStart="30dp"
        android:outlineSpotShadowColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_profile"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_arrow_left"/>


            <TextView
                android:id="@+id/visit_uname"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/log_out"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="gone"
                android:layout_height="25dp"
                app:srcCompat="@drawable/logout"/>



        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_below="@+id/toolbarly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover_user"
            android:layout_width="match_parent"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            android:layout_height="265dp" />

        <LinearLayout
            android:layout_marginTop="40dp"
            android:id="@+id/rl_two_login"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    android:layout_width="88dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_person2" />


                <ImageView
                    android:id="@+id/edit_profileimg"
                    android:layout_width="30dp"
                    android:visibility="gone"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_add" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_uname"
                android:layout_below="@+id/tv_one_login"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#710583"
                android:text="USER NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_one_login"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="example@mail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="-"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/border_circuler"
                    android:textColor="@color/black"
                    android:gravity="center" />



                <TextView
                    android:id="@+id/followings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="-"
                    android:paddingVertical="5dp"
                    android:background="@drawable/border_circuler"
                    android:textColor="@color/black"
                    android:gravity="center" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="Followers"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingLeft="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="Following"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingLeft="15dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="8">

                <TextView
                    android:id="@+id/follow_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="Follow"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center" />



                <TextView
                    android:id="@+id/message_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:text="Message"
                    android:paddingVertical="5dp"
                    android:background="@color/colorAccent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center" />



            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>




    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#000"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Edit Profile"
        android:padding="2dp"
        android:background="@drawable/btn_transaparent"
        android:textSize="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7C1B1919"
        android:layout_marginHorizontal="10dp"
        android:outlineSpotShadowColor="#7C1B1919"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:layout_marginTop="30dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mGridView"
        android:scrollbars="none"
        android:layout_below="@id/rl_profile"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_profile"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_profile"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/profile_anim"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>