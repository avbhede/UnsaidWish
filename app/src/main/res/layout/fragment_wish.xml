<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".WishFragment">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#FFFFFF"
        android:background="@drawable/toolbar_gradient"
        app:titleMarginStart="30dp"
        android:outlineSpotShadowColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:weightSum="5">


            <ImageView
                android:id="@+id/back_profile"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_wish2"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.7"
                android:layout_height="wrap_content"
                android:text="Wish"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvinbox"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Inbox"
                />


        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/happy_moment"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    android:src="@drawable/happy"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Happy Moment"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textSize="16dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            android:id="@+id/confession_wish"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    android:src="@drawable/confession"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confession"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="16dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/last_wish"
            android:layout_width="0dp"

            android:layout_weight="2.0"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    android:src="@drawable/lastwish"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Wish"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="16dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/help_wish"
            android:layout_width="0dp"
            android:layout_weight="2.0"
            android:layout_height="wrap_content"

            app:cardElevation="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    android:src="@drawable/safety"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety First"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="16dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/its_me"
            android:layout_width="0dp"
            android:layout_weight="4.0"
            android:layout_height="140dp"
            app:cardElevation="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/itsme4u"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Its me for u"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>